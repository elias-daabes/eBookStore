@model eBookStore.Models.Library

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MyLibrary</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f9f9f9;
        }

        h2 {
            color: #333;
            text-align: center;
        }

        .table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .table th, .table td {
                padding: 10px 15px;
                text-align: left;
                border: 1px solid #ddd;
            }

            .table th {
                background-color: #007bff;
                color: #fff;
                text-transform: uppercase;
                font-size: 14px;
            }

            .table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            .table tr:hover {
                background-color: #cccccc;
            }

        .btn {
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
        }

        .btn-danger {
            background-color: #dc3545;
            color: #fff;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .delete-button {
            padding: 8px 15px;
            border: none;
            background-color: #dc3545;
            color: white;
            cursor: pointer;
            border-radius: 4px;
        }

            .delete-button:hover {
                background-color: #c82333;
            }

        .return-button {
            padding: 8px 15px;
            border: none;
            background-color: #ffbf0f;
            color: white;
            cursor: pointer;
            border-radius: 4px;
        }

            .return-button:hover {
                background-color: #f47d00;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>My Library</h2>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th></th>
                    <th>Book</th>
                    <th>Borrowed Until</th>
                    <th>Acquisition Date</th>
                    <th>Book Formats</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @for(int index = 0; index < Model.books.Count; index++)
                {
                <tr><td>@index</td>
                    <td><img src="@Model.books[index].coverImagePath" alt="Alternate Text" style="height:50px" /></td>
                    <td>@Model.books[index].title</td>
                    <td>@Model.BorrowingDates[index].ToString().Replace("00:00:00", "")</td>
                    <td>@Model.AcquisitionDate[index].ToString().Replace("00:00:00", "")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(Model.books[index].epubPath))
                        {
                            @Html.ActionLink("epub", "DownloadFile", new { filePath = Model.books[index].epubPath })
                        }
                        @if (!string.IsNullOrEmpty(Model.books[index].fb2Path))
                        {
                            @Html.ActionLink("fb2", "DownloadFile", new { filePath = Model.books[index].fb2Path })
                        }
                        @if (!string.IsNullOrEmpty(Model.books[index].mobiPath))
                        {
                            @Html.ActionLink("mobi", "DownloadFile", new { filePath = Model.books[index].mobiPath })
                        }
                        @if (!string.IsNullOrEmpty(Model.books[index].pdfPath))
                        {
                            @Html.ActionLink("pdf", "DownloadFile", new { filePath = Model.books[index].pdfPath })
                        }

                    </td>
                    <td>
                        @if (Model.BorrowingDates[index] == null) //check date: not null = borrowed book
                        {
                            using (Html.BeginForm("DeleteBookFromLibrary", "Account", new { bookId = Model.books[index].id, accountId = Model.AccountId }, FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to delete this book?');" }))
                            {
                                <input type="submit" class="delete-button" value="Delete Book" />
                            }
                        }
                        else
                        {
                            using (Html.BeginForm("DeleteBookFromLibrary", "Account", new { bookId = Model.books[index].id, accountId = Model.AccountId }, FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to return this book?');" }))
                            {
                                <input type="submit" class="return-button" value="Return Book" />
                            }
                        }
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
